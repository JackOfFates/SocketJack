<Window x:Class="SocketJack.WpfBasicGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocketJack.WpfBasicGame"
        mc:Ignorable="d"
        Title="Using SocketJack to make a basic game in WPF" Height="761" Width="971">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="18" FontWeight="SemiBold"
                   Text="SocketJack WPF Basic Game (Click Race)" />

        <Border Grid.Row="1" Margin="0,10,0,10" Padding="10" BorderThickness="1" BorderBrush="#33000000" CornerRadius="6">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <RadioButton x:Name="HostRadio" Content="Host" IsChecked="True" Margin="0,0,10,0"/>
                    <RadioButton x:Name="JoinRadio" Content="Join"/>
                    <CheckBox x:Name="UdpCheckBox" VerticalAlignment="Center" Content="UDP" IsChecked="True" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <TextBlock VerticalAlignment="Center" Text="Host:" Margin="0,0,6,0"/>
                    <TextBox x:Name="ServerHostText" Width="160" Text="127.0.0.1" Margin="0,0,10,0"/>
                    <TextBlock VerticalAlignment="Center" Text="Port:" Margin="0,0,6,0"/>
                    <TextBox x:Name="ServerPortText" Width="80" Text="7754" Margin="0,0,10,0"/>
                    <CheckBox x:Name="BotEnabledCheck" VerticalAlignment="Center" Content="Bot" Margin="0,0,10,0" IsChecked="True"/>
                    <TextBlock VerticalAlignment="Center" Text="Count:" Margin="0,0,6,0"/>
                    <ComboBox x:Name="BotCountCombo" Width="70" SelectedIndex="1" Margin="0,0,10,0" SelectionChanged="BotCountCombo_SelectionChanged">
                        <ComboBoxItem Content="0"/>
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="25"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                    </ComboBox>
                    <ComboBox x:Name="BotDifficultyCombo" Width="110" SelectedIndex="0" Margin="0,0,10,0">
                        <ComboBoxItem Content="Easy"/>
                        <ComboBoxItem Content="Normal"/>
                        <ComboBoxItem Content="Hard"/>
                    </ComboBox>
                    <Button x:Name="StartButton" Width="133" Content="Start Round" Click="StartButton_Click" />
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="2" Margin="0,0,0,10" Padding="8" BorderThickness="1" BorderBrush="#33000000" CornerRadius="6">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontWeight="SemiBold" Text="Metrics" VerticalAlignment="Center" Margin="0,0,14,0"/>
                <TextBlock Text="Upload:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBlock x:Name="UploadSpeedText" Text="--" VerticalAlignment="Center" Width="90"/>
                <TextBlock Text="Download:" VerticalAlignment="Center" Margin="10,0,4,0"/>
                <TextBlock x:Name="DownloadSpeedText" Text="--" VerticalAlignment="Center" Width="90"/>
                <TextBlock Text="Latency:" VerticalAlignment="Center" Margin="10,0,4,0"/>
                <TextBlock x:Name="LatencyText" Text="--" VerticalAlignment="Center" Width="60"/>
                <TextBlock Text="Ping:" VerticalAlignment="Center" Margin="10,0,4,0"/>
                <TextBlock x:Name="PingText" Text="--" VerticalAlignment="Center" Width="60"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto" MinWidth="350"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Padding="10" BorderThickness="1" BorderBrush="#33000000" CornerRadius="6">
                <Canvas x:Name="GameCanvas" Background="#0C000000" Width="560" Margin="1,0,1,-1">
                    <Ellipse x:Name="BotCursor"
		                         Width="30" Height="30"
		                         Fill="Orange"
		                         Stroke="Black"
		                         StrokeThickness="2"
		                         Visibility="Collapsed"
		                         IsHitTestVisible="False"
		                         Panel.ZIndex="1"/>
                    <Button x:Name="TargetButton"
                            Width="70" Height="70"
                            Content="CLICK"
                            FontWeight="Bold"
                            Background="#FF2D7DFF"
                            Foreground="White"
                            BorderBrush="#CC000000"
                            BorderThickness="2"
                            Cursor="Arrow"
                            PreviewMouseLeftButtonDown="TargetButton_MouseDown"
                            Visibility="Collapsed"
                            Panel.ZIndex="2"/>
                </Canvas>
            </Border>

            <Border Grid.Column="1" Margin="12,0,0,0" Padding="10" BorderThickness="1" BorderBrush="#33000000" CornerRadius="6">
                <StackPanel CanVerticallyScroll="True">
                    <TextBlock FontWeight="SemiBold" Text="Round"/>
                    <TextBlock x:Name="RoundStatusText" Text="Not started" Height="26"/>

                    <TextBlock FontWeight="SemiBold" Text="Log"/>
                    <TextBox x:Name="LogText" Height="130" IsReadOnly="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                             VerticalContentAlignment="Top" />

                    <Separator Margin="0,10,0,10"/>

                    <TextBlock FontWeight="SemiBold" Text="Points" Margin="0,0,0,6"/>
                    <ItemsControl x:Name="ScoreboardList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Separator Margin="0,10,0,10"/>

                    <TextBlock FontWeight="SemiBold" Text="Control Share (Bitmap)" Margin="0,0,0,6"/>
                    <Button x:Name="ShareToggleButton" Content="Start Sharing" Width="133" Margin="0,0,0,6" Click="ShareToggleButton_Click" />
                    <Border Height="240">
                        <Image x:Name="SharedImage" Stretch="UniformToFill" StretchDirection="DownOnly" />
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <TextBlock Grid.Row="4" Margin="0,10,0,0" Foreground="#99000000"
                   Text="Tip: Click Start Round. Click the target as fast as you can." />
    </Grid>
</Window>
