<Window x:Class="TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select a Test" Height="112" Width="1280" Name="TestWindow" WindowStartupLocation="CenterScreen">
    <TabControl x:Name="Tabs">
        <TabItem Header="Tests">
            <Grid Background="#FF272727">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                        <Button x:Name="ButtonMaxClients" Content="Max Clients" Margin="10,5,10,5" BorderBrush="#FF790000" Foreground="#FFEA0000"/>
                        <Button x:Name="ButtonBandwidth" Content="Bandwidth" Grid.Column="1" Margin="10,5,10,5" Foreground="#FFEA0000" BorderBrush="#FF790000"/>
                        <Button x:Name="ButtonChat" Content="P2P Chat" Grid.Column="2" Margin="10,5,10,5" Foreground="#FFEA0000" BorderBrush="#FF790000"/>
                        <Button x:Name="ButtonHttpServer" Content="HttpServer" Grid.Column="3" Margin="10,5,10,5" Foreground="#FFEA0000" BorderBrush="#FF790000"/>
                        <Button x:Name="ButtonWebSockets" Content="WebSockets" Grid.Column="4" Margin="10,5,10,5" Foreground="#FFEA0000" BorderBrush="#FF790000"/>
                        <Button x:Name="ButtonControlShare" Content="Control Share" Grid.Column="5" Margin="10,5,10,5" Foreground="#FFEA0000" BorderBrush="#FF790000"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
