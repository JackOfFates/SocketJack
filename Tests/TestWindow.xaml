<Window x:Class="TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select a Test" Height="112" Width="850" Name="TestWindow" WindowStartupLocation="CenterOwner">
    <TabControl x:Name="Tabs">
        <TabItem Header="Tests">
            <Grid Background="#FF272727">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="ButtonMaxClients" Content="Max Clients" Margin="10,5,10,5"/>
                <Button x:Name="ButtonBandwidth" Content="Bandwidth" Grid.Column="1" Margin="10,5,10,5"/>
                <Button x:Name="ButtonP2P" Content="P2P" Grid.Column="2" Margin="10,5,10,5" IsEnabled="False" Background="{DynamicResource Button.Disabled.Background}"/>
                <Button x:Name="ButtonBenchmarks" Content="Benchmark Serializers" Grid.Column="3" Margin="10,5,10,5" IsEnabled="False"/>
                <Button x:Name="ButtonChat" Content="Chat" Grid.Column="4" Margin="10,5,10,5"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
